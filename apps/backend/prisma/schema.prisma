generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int       @id @default(autoincrement())
  email          String    @unique
  simonyiEmail   String?   @unique
  githubUsername String?   @unique
  fullName       String
  profileImage   String?
  position       Position  @default(UJONC)
  logs           Log[]
  createdAt      DateTime  @default(now())
  managedProjects Project[] @relation("ProjectManager")
  projects       Project[] @relation("ProjectMembers")
}

model WorkPeriod {
  id        Int      @id @default(autoincrement())
  name      String
  startDate DateTime
  endDate   DateTime
  logs      Log[]
}

model Project {
  id               Int      @id @default(autoincrement())
  name             String   @unique
  description      String?
  githubUrl        String?
  projectManager   User?    @relation("ProjectManager", fields: [projectManagerId], references: [id])
  projectManagerId Int?
  logs             Log[]
  members          User[]   @relation("ProjectMembers")
}

model Event {
  id   Int       @id @default(autoincrement())
  name String
  date DateTime
  type EventType
  logs Log[]
}

model Log {
  id           Int         @id @default(autoincrement())
  date         DateTime
  category     LogCategory
  description  String
  difficulty   Difficulty?
  timeSpent    Int?
  user         User        @relation(fields: [userId], references: [id])
  userId       Int
  workPeriod   WorkPeriod  @relation(fields: [workPeriodId], references: [id])
  workPeriodId Int
  project      Project?    @relation(fields: [projectId], references: [id])
  projectId    Int?
  event        Event?      @relation(fields: [eventId], references: [id])
  eventId      Int?
}

enum LogCategory {
  RESPONSIBILITY
  PROJECT
  EVENT
  MAINTENANCE
  SIMONYI
  OTHER
}

enum Difficulty {
  SMALL
  MEDIUM
  LARGE
}

enum EventType {
  KIR_DEV
  SIMONYI
}

enum Position {
  UJONC
  TAG
  HR_FELELOS
  PR_FELELOS
  TANFOLYAMFELELOS
  GAZDASAGIS
  KORVEZETO_HELYETTES
  KORVEZETO
  OREGTAG
  ARCHIVALT
}